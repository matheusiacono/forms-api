{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node18/tsconfig.json"
  ],
  "include": ["src/"],
  "compilerOptions": {
    "target": "ES2022",
    "verbatimModuleSyntax": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "outDir": "./dist",

    "noUnusedParameters": false,
    "strictPropertyInitialization": false
  }
}
